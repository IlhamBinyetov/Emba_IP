@model List<Emba_IP.ViewModels.User.UserViewModel>

@{
    ViewData["Title"] = "İstifadəçilər";
}

<h1>İstifadəçilər</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Rollar</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Redaktə et</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
