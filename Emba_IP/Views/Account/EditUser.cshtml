@model Emba_IP.ViewModels.User.UserEditViewModel

@{
    ViewData["Title"] = "İstifadəçini Redaktə Et";
}

<h1>İstifadəçini Redaktə Et</h1>
<hr />

<style>
    select.form-control {
        appearance: menulist!important;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="SelectedRole" class="control-label">Rol</label>
                <select asp-for="SelectedRole" class="form-control">
                    @foreach (var role in Model.AllRoles)
                    {
                        <option value="@role" selected="@(role == Model.SelectedRole)">@role</option>
                    }
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.AllRoles.Count; i++)
            {
                <input type="hidden" asp-for="AllRoles[i]" />
            }
            <div class="form-group">
                <input type="submit" value="Yenilə" class="btn btn-primary" />
                <a asp-action="Users" class="btn btn-secondary">Ləğv et</a>
            </div>
        </form>
    </div>
</div>
